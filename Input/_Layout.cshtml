@{
  string Logo =  Context.String(BlogKeys.Title);
  string Title = Model.WithoutSettings.String(BlogKeys.Title);
  if (string.IsNullOrWhiteSpace(Title))
  {
    Title = "Home";
  }
  bool IsPost = (@Context.GetLink(Model).Contains("posts/")) || (@Context.GetLink(Model) == Context.GetLink(Context.String(BlogKeys.PostsPath)))|| (Title == "Home");
  string PageTitle = Logo + (string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title);
}

<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="@Context.String(BlogKeys.Description)" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="application-name" content="@Logo" />
  <meta name="msapplication-tooltip" content="@Logo" />
  <meta name="msapplication-starturl" content="@Context.GetLink("/")" />
  <meta property="og:title" content="@PageTitle" />
  @* <meta property="og:image" content="@Blog.Image" /> *@
  <meta property="og:type" content="website" />
  <meta property="og:url" content="@Context.GetLink(Model, true)" />
  <title>@PageTitle</title>  
  <link type="application/rss+xml" rel="alternate" title="@Context.String(BlogKeys.Title)" href="@Context.GetLink(Context.String(BlogKeys.RssPath))" />
  <link type="application/atom+xml" rel="alternate" title="@Context.String(BlogKeys.Title)" href="@Context.GetLink(Context.String(BlogKeys.AtomPath))" />
  <link rel="shortcut icon" href="@Context.GetLink("/favicon.ico")" type="image/x-icon">
  <link rel="icon" href="@Context.GetLink("/favicon.ico")" type="image/x-icon">
  @Html.Partial("_Styles")
</head>

<body class="container">
  <div class="wrapper">
    <header id="pagetop" aria-role="banner">
      <span class="logo">@Logo</span>
    </header>
    @Html.Partial("_Navbar")
    <section id="main" aria-role="main" >
      @if(IsPost)
      {
        @RenderBody()
      }else
      {
        <div class="content">
          @RenderBody()
        </div>
      }
    </section>
    <footer aria-role="contentinfo">
      <hr>
      <div class="innerfooter">
        <strong>Copyright Â© @DateTime.Now.Year - <a href="https://wyam.io">Generated by Wyam</a></strong>
      </div>
    </footer>
    <div class="backtotop" title="Return to Top" id="backtotop">
      <a href="#pagetop">
        <span>^</span>
      </a>
    </div>
  </div>
  @Html.Partial("_Scripts")
</body>

</html>